@using Material.Calculator.Models
@using Material.Calculator.Models.Banner

@model CalculatorModel
@{
    ViewBag.Title = "Calculator";

}

@Html.Partial("_heroBanner",new Banner{Title = @ViewBag.Title})

<link type="text/css" rel="stylesheet" href="/Content/css/CalculatorStyle.css"/>
<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
<script type="text/javascript">

    $(document).ready(function() {

        if (@Model.AreaType.Equals(CalculatorModel.AreaTypes.Square).ToString().ToLower()) {
            $("#squareArea").show();
            $("#imageHolder").attr("src", "/Content/img/square.png");
        }
        else if (@Model.AreaType.Equals(CalculatorModel.AreaTypes.Circle).ToString().ToLower()) {
            $("#circleArea").show();

            $("#imageHolder").attr("src", "/Content/img/circle.png");
        }
        else if (@Model.AreaType.Equals(CalculatorModel.AreaTypes.Triangle).ToString().ToLower()) {
            $("#triangleArea").show();

            $("#imageHolder").attr("src", "/Content/img/triangle.png");
        }

    });

    function leaveChange(control) {

        if (control.value == "0") {
            $("#imageHolder").attr("src", "/Content/img/square.png");
            $("#squareArea").show();
            $("#triangleArea").hide();
            $("#circleArea").hide();

        } else if (control.value == "1") {

            $("#imageHolder").attr("src", "/Content/img/circle.png");
            $("#squareArea").hide();
            $("#triangleArea").hide();
            $("#circleArea").show();
        } else if (control.value == "2") {

            $("#imageHolder").attr("src", "/Content/img/triangle.png");
            $("#squareArea").hide();
            $("#triangleArea").show();
            $("#circleArea").hide();
        } 
    }
</script>

<div class="form-style-3">
    <form method="post">

        <feildset class="col col-lg-12">
        
            <div class="row">
                @*PRODUCT TYPE*@
                <div class="row">
                    <div class="row">
                        <div class="col col-lg-6">
                            <legend>Area Type</legend>
                            <div class="col col-lg-6">
                                @Html.DisplayNameFor(m => m.AreaType)
                            </div>
                            <div class="col col-lg-6">
                                @Html.DropDownListFor(m => m.AreaType, new SelectList(ViewBag.AreaTypesList, "Value", "Text"),
                                    (object) new {@class = "form-control select", @placeholder = "Status",
                                        @onchange = "leaveChange(this)" })

                            </div>
                        </div>
                        <div class="col col-lg-6">
                            <img id="imageHolder" src="~/Content/img/square.png"/>
                        </div>
                        </div>
                    </div>
                <div class="col-lg-4">
                    <legend>Product Type</legend>
                    <div class="row">
                        <div class="col col-lg-6">
                            @Html.DisplayNameFor(m => m.ProductType)
                        </div>
                        <div class="col col-lg-6">
                            @Html.DropDownListFor(m => m.ProductType, new SelectList(ViewBag.ProductTypesList, "Value", "Text"),
                                (object) new {@class = "form-control select", @placeholder = "Status"})

                        </div>
                    </div>
               
                </div>
                @*AREA*@
                <div class="col col-lg-4">
                    <legend>Area</legend>
                    <div id="squareArea" style="display: none">
                        <div class="row">
                            <div class="col col-lg-6">
                                @Html.DisplayNameFor(m => m.Length)
                            </div>
                            <div class="col col-lg-6">
                                @Html.TextBoxFor(m => m.Length)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-lg-6">
                                @Html.DisplayNameFor(m => m.Width)
                            </div>
                            <div class="col col-lg-6">
                                @Html.TextBoxFor(m => m.Width)
                            </div>
                        </div>
                        </div>
                        <div id="circleArea" style="display: none">
                        <div class="row">
                            <div class="col col-lg-6">
                                @Html.DisplayNameFor(m => m.Diameter)
                            </div>
                            <div class="col col-lg-6">
                                @Html.TextBoxFor(m => m.Diameter)
                            </div>
                        </div>
                        </div>
                    <div id="triangleArea" style="display: none">
                        <div class="row">
                            <div class="col col-lg-6">
                                @Html.DisplayNameFor(m => m.Edge1)
                            </div>
                            <div class="col col-lg-6">
                                @Html.TextBoxFor(m => m.Edge1)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-lg-6">
                                @Html.DisplayNameFor(m => m.Edge2)
                            </div>
                            <div class="col col-lg-6">
                                @Html.TextBoxFor(m => m.Edge2)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-lg-6">
                                @Html.DisplayNameFor(m => m.Edge3)
                            </div>
                            <div class="col col-lg-6">
                                @Html.TextBoxFor(m => m.Edge3)
                            </div>
                        </div>
                    </div>
                    
                </div>
                @*DEPTH*@
                <div class="col col-lg-4">
                    <legend>Depth</legend>
                    <div class="row">
                        <div class="col col-lg-6">
                            @Html.DisplayNameFor(m => m.Depth)
                        </div>
                        <div class="col col-lg-6">
                            @Html.TextBoxFor(m => m.Depth)
                        </div>
                    </div>
                </div>
            </div>
       
            @if (Model.ResultsCubes > 0 || Model.ResultsTonnes > 0)
            {
            <legend>Results</legend>
          
            <div class="row results">


                @if (Model.ResultsCubes > 0)
                {
                    <div class="col-lg-1">
                        @Html.DisplayNameFor(m => m.ResultsCubes)
                    </div>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.ResultsCubes, new { @disabled = "disabled" })
                    </div>
                }


                @if (Model.ResultsTonnes > 0)
                {
                    <div class="col-lg-1">
                        @Html.DisplayNameFor(m => m.ResultsTonnes)
                    </div>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.ResultsTonnes, new { @disabled = "disabled" })

                    </div>
                }
            </div>
                }
            @*BUTTONS*@
            <div class="row buttons">
                <div class="col-lg-4">
                    <input type="submit" value="GO"/>
                </div>
            </div>
            <div class="row buttons">
                <div class="col-lg-4">
                    <input type="reset" value="Reset" />
                </div>
            </div>
        </feildset>
    </form>
   
    </div>

